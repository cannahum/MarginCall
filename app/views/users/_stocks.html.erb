<div class ="panel panel-default">
	<!-- Table of user's triggers -->
	<div class="panel-heading">Triggers for <%=@user.name%></div>
	<div class="panel-body">
	<table class="table table-hover">
		<thead>
			<tr>
				<th>Ticker</th>
				<th>Trigger Type</th>
				<th>Trigger Value</th>
				<th>Current Value</th>
				<th>Options</th>
			</tr>
		</thead>
		<tbody>
			<% Trigger.all.each do |trigger| %>
			<% if trigger.userEmail == @user.email1%>
			  <% stock = Stock.find_by(ticker: trigger.ticker)%>
			 	<tr>
			 	  <td><%= link_to "#{stock.ticker}", stock_path(stock) %></td>

			 	  <td><%= sanitize_trigger_type(trigger.triggertype) %></td>

	              <td><%= trigger.trigger_price %></td>
	              <td><%= TriggerJob.findvalue(stock,trigger.triggertype)%></td>
	              <td><%= link_to 'Show', trigger %>   <%= link_to 'Edit', edit_trigger_path(trigger) %>  <%= link_to 'Destroy', trigger, method: :delete, data: { confirm: 'Are you sure?' } %></td>
			 	</tr>
			  <%end%>
			<%end%>
		</tbody>
	</table>
	</div>
	<div class="panel-footer">	
			<%= link_to 'Add Trigger', new_trigger_path, class: 'btn btn-default btn-xs' %>	
	</div>
</div>