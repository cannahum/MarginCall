<div class ="panel panel-default">
	<!-- Table of user's triggers -->
	<div class="panel-heading">Triggers for <%=@user.name%></div>
	<div class="panel-body">
	<table class="table table-hover">
		<thead>
			<tr>
				<th>Ticker</th>
				<th>Trigger Price</th>
				<th>Current Price</th>
				<th>Options</th>
			</tr>
		</thead>
		<tbody>
			 <% Trigger.all.each do |trigger| %>
			 <% if trigger.userEmail == @user.email1%>
			 	<% stock = Stock.find_by(ticker: trigger.ticker)%>
			 	<tr data-link="<%= stock_path(stock)%>">
			 		<td><%= trigger.ticker %></td>
	                <td><%= trigger.trigger_price %></td>
	                <td><%= Stock.find_by(ticker: trigger.ticker).current_price%></td>
	                <td><%= link_to 'Show', trigger %>   <%= link_to 'Edit', edit_trigger_path(trigger) %>  <%= link_to 'Destroy', trigger, method: :delete, data: { confirm: 'Are you sure?' } %></td>
			 	</tr>
			 <%end%>
			 <%end%>
		</tbody>
	</table>
	</div>
	<div class="panel-footer"><%= link_to 'Add Trigger', new_trigger_path %> | <%= link_to 'Edit', edit_user_path(@user) %> | <%= link_to 'Back', homepage_path %></div>
</div>