<div class="margincall_form">
	<% if flash[:alert] %>
		<p id="notice"><%= flash[:alert] %></p>
	<% end %>
	<%= form_tag do %>
		<fieldset>
			<legend>Please Log In</legend>
			<div>
				<%= label_tag :name %>
				<%= text_field_tag :name, params[:name] %>
			</div>
			<div>
				<%= label_tag :password %>
				<%= password_field_tag :password, params[:password] %>
			</div>
			<div>
				<%= submit_tag "Login" %>
			</div>
		</fieldset>
		<p>Not a User Yet? <%= link_to 'Sign Up', '/users/new/' %></p>
	<% end %>
</div>