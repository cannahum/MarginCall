<!-- This file is the basic web layout of the website-->
<!DOCTYPE html>
<html>
<head>
  <title>MarginCall</title>
  <%= stylesheet_link_tag    'application', media: 'all', 'data-turbolinks-track' => true %>
  <%= javascript_include_tag 'application', 'data-turbolinks-track' => true %>
  <%= yield :head %>
  <%= csrf_meta_tags %>
  <meta charset="utf-8">
  <meta http-equiv="X-UA-Compatible" content="IE=edge">
  <meta name="viewport" content="width=device-width, initial-scale=1">
</head>
<body>
<!-- Will add navbar on top according to bootstrap with three pages on navbar, Margin Call home about contact -->
	<nav class="navbar navbar-inverse navbar-fixed-top" style="background-color: #0000CD">
      <div class="container">
        <div class="navbar-header" style="background-color: #0000CD">
          <button type="button" class="navbar-toggle collapsed" data-toggle="collapse" data-target="#navbar" aria-expanded="false" aria-controls="navbar">
            <span class="sr-only">Toggle navigation</span>
            <span class="icon-bar"></span>
            <span class="icon-bar"></span>
            <span class="icon-bar"></span>
          </button>
          <a class="navbar-brand" href="#">Margin Call</a>
        </div>
        <div id="navbar" class="collapse navbar-collapse">
          <ul class="nav navbar-nav">
            <li class="active"><%= link_to 'Home',homepage_url%></li>
            <li><a href="#about">About</a></li>
            <li><a href="#contact">Contact</a></li>
            <% if logged_in? %>
              <!-- <li><%= link_to 'Users', '#' %></li> -->
              <li class="dropdown">
                <a href="#" class="dropdown-toggle" data-toggle="dropdown">
                  <%=current_user.name%> <b class="caret"></b>
                </a>
                <ul class="dropdown-menu">
                  <li><%= link_to 'Dashboard', current_user %></li>
                  <li><%= link_to 'Settings', edit_user_path(current_user) %></li>
                  <li class="divider"></li>
                  <li><%= link_to 'Log Out', logout_path, method: "delete" %></li>
                </ul>
              </li>
            <% else %>
              <li><%= link_to 'Log in', login_path %></li>
            <% end %>
          </ul>
        </div><!--/.nav-collapse -->
      </div>
    </nav>
    
    <!-- Yield swaps in individual html data from other views, for example if I go to trigger create new form it will put the triggers/_form.html.erb data where yield is.-->
    <div class="container" style="margin-top: 50px">

      <% flash.each do |name, msg| -%>
        <%= content_tag :div, msg, class: name %>
      <% end -%>			
      <%= yield %>
      <div class="row">
        <div class="col-md-12">
          <%= debug(params) if Rails.env.development? %>
        </div>
      </div>
    </div>
	

</body>
</html>
