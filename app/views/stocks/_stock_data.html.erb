<div class="well">
  <div class="row">
    <div class="col-md-4">
      <ul class="list-group">
        <li class="list-group-item">
          <strong>Closing Price:</strong>
          <%= @stock.current_price %>
        </li>
        <li class="list-group-item">
          <strong> Daily Minimum </strong>
          <%=@stock.daily_min_price %> 
        </li>
        <li class="list-group-item">
          <strong>Daily Maximum</strong>
          <%= @stock.daily_max_price %>
        </li>
        <li class="list-group-item">
          <strong>Volume Traded</strong>
          <%= @stock.volume %>
        </li>
      </ul>
    </div>
    <div class="col-md-4">
      <ul class="list-group"> 
        <li class="list-group-item">
          <strong>Dividend Yield</strong>
          <%= @stock.dividend_yield %>
        </li>
        <li class="list-group-item">
          <strong>Dividend Per Share</strong>
          <%= @stock.dividend_per_share %>
        </li>
        <li class="list-group-item">
          <strong>Earning Per Share</strong>
          <%= @stock.eps%>
        </li>
        <li class="list-group-item">
          <strong>P/E Ratio</strong>
          <%= @stock.pe_ratio%>
        </li>
      </ul>
    </div>
    <div class="col-md-4">
      <ul class="list-group">
        <li class="list-group-item">
          <strong>50 Day Moving Average % Change</strong>
          <%= @stock.percentchange_from50day_avg %>%
        </li>
        <li class="list-group-item">
          <strong>200 Day Moving Average % Change</strong>
          <%= @stock.percentchange_from200day_avg %>%
        </li>
        <li class="list-group-item">
          <strong>52 Week Low % Change</strong>
          <%= @stock.percentchange_from52week_low%>%
        </li>
        <li class="list-group-item">
          <strong>52 Week High % Change</strong>
          <%= @stock.percentchange_from52week_high%>%
        </li>
      </ul>
    </div>
  </div>  
</div>