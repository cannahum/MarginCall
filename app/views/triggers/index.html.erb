<div class="container">
  <div class="vertical-center-row">
    <div class="col-xs-12" style="vertical-align:middle" align="center">  
        <p id="notice"><%= notice %></p>

        <h1>All Current Triggers</h1>

        <table class="table table-striped ">
          <thead>
            <tr>
              <th>Useremail</th>
              <th>Ticker</th>
              <th>Trigger price</th>
              <th colspan="3"></th>
            </tr>
          </thead>

          <tbody>
            <% @triggers.each do |trigger| %>
              <tr>
              <!-- When we implement sessions (authentication) -->
              <!-- Add the if statement with user in session compared to trigger user-->
                <td><%= trigger.userEmail %></td>
                <td><%= trigger.ticker %></td>
                <td><%= trigger.trigger_price %></td>
                <td><%= link_to 'Show', trigger %></td>
                <td><%= link_to 'Edit', edit_trigger_path(trigger) %></td>
                <td><%= link_to 'Destroy', trigger, method: :delete, data: { confirm: 'Are you sure?' } %></td>
                <!-- Unsure how to speciy the graph probably look the the -->
                <td><a href="#" data-toggle="modal" data-target="#largeModal">Graph</a></td>
              </tr>
            <% end %>
          </tbody>
        </table>

        <br>

        <%= link_to 'New Trigger', new_trigger_path %>
      
    </div>
  </div>
  <div class="modal fade" id="largeModal" tabindex="-1" role="dialog" aria-labelledby="largeModal" aria-hidden="true">
    <div class="modal-dialog modal-lg">
      <div class="modal-content">
        <div class="modal-body">
         <!-- Insert graph component here not really sure how -->
        </div>
        <div class="modal-footer">
          <button type="button" class="btn btn-default" data-dismiss="modal">Close</button>
        </div>
      </div>
    </div>
  </div>
</div>