<div class="container">
  <!-- <div class="row"><div class="col-md-12" style="margin-bottom:10px"></div></div> -->
  <div class="vertical-center-row">
    <div class="col-xs-12" style="vertical-align:middle" >
      <div align="center">  
        <p id="notice"><%= notice %></p>

        <h1>All Current Triggers</h1>

        <table class="table table-striped ">
          <thead>
            <tr>
              <th>Useremail</th>
              <th>Ticker</th>
              <th>Trigger price</th>
              <th colspan="3"></th>
            </tr>
          </thead>

          <tbody>
            <% @triggers.each do |trigger| %>
              <tr>
              <!-- When we implement sessions (authentication) -->
              <!-- Add the if statement with user in session compared to trigger user-->
                <td><%= trigger.userEmail %></td>
                <td><%= trigger.ticker %></td>
                <td><%= trigger.trigger_price %></td>
                <td><%= link_to 'Show', trigger %></td>
                <td><%= link_to 'Edit', edit_trigger_path(trigger) %></td>
                <td><%= link_to 'Destroy', trigger, method: :delete, data: { confirm: 'Are you sure?' } %></td>
              </tr>
            <% end %>
          </tbody>
        </table>

        <br>

        <%= link_to 'New Trigger', new_trigger_path %>
      </div>
    </div>
  </div>
</div>